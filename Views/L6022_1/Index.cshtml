@using CMBListini.ViewModels;
@model ViewModelL6022_1
@{
    ViewBag.Title = "Listino 6022";
}

<!-- Title -->
<div class="row mb-1">
    <div class="col-md-12">
        <h2 class="font-weight-light pageTitle">@ViewBag.Title</h2>
    </div>
</div>
<hr class="mt-1" />
<style>
    #notification {
        position: fixed;
        bottom: 0;
        right: 0;
    }
    #para {
