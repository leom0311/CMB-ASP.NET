        <div style="text-align:center">
            <span class="text-danger" id="errorBottom"></span>
        </div>
        <hr class="mt-1" />
        <div id="Listingtotals">
            @{ Html.RenderPartial("_Total", Model); }
        </div>
        <hr class="mt-1" />
    </div>
</div>
            }

<!-- Pulsanti -->

<!-- iframe -->
<iframe name="download" style="position: absolute;width:0;height:0;border:0;"></iframe>


